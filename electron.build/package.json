{
  "name": "electron.build",
  "description": "Playground for Electron.Build",
  "version": "25.05.06+b1519",
  "author": {
    "name": "DJArbz"
  },
  "packageManager": "yarn@4.9.1",
  "main": "app/index.js",
  "build": {
    "appId": "me.arbour.coder",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "app"
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "portable"
      ]
    },
    "nsis": {
      "perMachine": false
    },
    "linux": {
      "category": "Network",
      "target": [
        "AppImage",
        "flatpak",
        "deb",
        "rpm",
        "pacman",
        "apk"
      ]
    }
  },
  "scripts": {
    "icon:download": "wget -q https://coder.com/favicon-light.svg -O app/light.svg",
    "icon:convert": "convert -density 300 -resize 256 -background none app/light.svg app/icon.png",
    "icon:update": "yarn icon:download && yarn icon:convert",
    "version:update": "jq --arg newVersion $(date \"+%y.%m.%d+b%H%M\") '.version = $newVersion' package.json > temp.package.json && mv temp.package.json package.json",
    "build:pre": "yarn icon:update && yarn version:update",
    "app:dir": "yarn build:pre && electron-builder --dir",
    "app:dist": "yarn build:pre && electron-builder --win --linux",
    "app:release": "exit 1; yarn app:dist"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
